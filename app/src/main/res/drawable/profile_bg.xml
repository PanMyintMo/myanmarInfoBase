<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="true">
      <shape android:dither="true" android:shape="rectangle"
          android:useLevel="false" android:visible="true" tools:ignore="StateListReachable">
          <solid android:color="#4282DC"/>
          <corners android:radius="10dp"/>
          <size android:width="50dp"
              android:height="30dp">
          </size>
      </shape>
  </item>


    <item android:state_checked="false">
    <shape android:dither="true" android:shape="oval"
        android:useLevel="false" android:visible="true">
        <solid android:color="@color/white"/>
        <corners android:radius="6dp"/>
        <size android:width="70dp"
            android:height="30dp">
        </size>

    </shape>

</item>
</selector>